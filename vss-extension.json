{
  "manifestVersion": 1,
  "id": "pr-tracker-hub",
  "publisher": "AnassKartit",
  "version": "1.0.24",
  "name": "PR Tracker - Pull Request Dashboard",
  "description": "Azure DevOps pull request dashboard: track PRs across projects, detect merge conflicts, monitor approvals, get real-time notifications, and view everything in one widget. Dark mode, English & French.",
  "public": true,
  "galleryFlags": [
    "Public"
  ],
  "categories": [
    "Azure Repos",
    "Azure Boards"
  ],
  "tags": [
    "pull request",
    "pull request dashboard",
    "PR monitor",
    "merge conflicts",
    "code review",
    "dashboard widget",
    "dark mode",
    "reviewer tracking",
    "notifications",
    "multi-project"
  ],
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "icons": {
    "default": "static/icon.png"
  },
  "content": {
    "details": {
      "path": "overview.md"
    }
  },
  "links": {
    "repository": {
      "uri": "https://github.com/AnassKartit/MYPRs"
    },
    "issues": {
      "uri": "https://github.com/AnassKartit/MYPRs/issues"
    },
    "support": {
      "uri": "https://github.com/AnassKartit/MYPRs#readme"
    }
  },
  "repository": {
    "type": "git",
    "uri": "https://github.com/AnassKartit/MYPRs"
  },
  "branding": {
    "color": "#0078d4",
    "theme": "dark"
  },
  "files": [
    {
      "path": "dist",
      "addressable": true
    },
    {
      "path": "static",
      "addressable": true
    }
  ],
  "scopes": [
    "vso.code",
    "vso.project",
    "vso.profile",
    "vso.notification_manage"
  ],
  "contributions": [
    {
      "id": "pr-tracker-hub",
      "type": "ms.vss-web.hub",
      "targets": [
        "ms.vss-code-web.code-hub-group"
      ],
      "properties": {
        "name": "PR Tracker",
        "order": 99,
        "uri": "dist/hub.html",
        "icon": {
          "light": "static/icon.png",
          "dark": "static/icon.png"
        }
      }
    },
    {
      "id": "pr-tracker-org-hub",
      "type": "ms.vss-web.hub",
      "targets": [
        "ms.vss-web.collection-admin-hub-group"
      ],
      "properties": {
        "name": "PR Tracker",
        "order": 99,
        "uri": "dist/hub.html",
        "icon": {
          "light": "static/icon.png",
          "dark": "static/icon.png"
        }
      }
    },
    {
      "id": "pr-tracker-widget",
      "type": "ms.vss-dashboards-web.widget",
      "targets": [
        "ms.vss-dashboards-web.widget-catalog",
        "AnassKartit.pr-tracker-hub.pr-tracker-widget.Configuration"
      ],
      "properties": {
        "name": "PR Tracker",
        "description": "Shows a summary of active pull requests across your organization - total, approved, conflicts, waiting, and PRs needing your review.",
        "catalogIconUrl": "static/icon.png",
        "previewImageUrl": "static/icon.png",
        "uri": "dist/widget.html",
        "supportedSizes": [
          {
            "rowSpan": 1,
            "columnSpan": 2
          },
          {
            "rowSpan": 2,
            "columnSpan": 2
          }
        ],
        "supportedScopes": [
          "project_team"
        ]
      }
    }
  ]
}
